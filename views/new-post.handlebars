<!-- Start a post creation card with class "post card" -->
<div class="post card">
  <!-- Create a card header with the title "Create New Post" -->
  <div class="card-header">
    <h2>Create New Post</h2>
  </div>
  <!-- Start a form for creating a new post with class "card-body" -->
  <form id="new-post-form" class="card-body">
    <!-- Label and input field for specifying the post title -->
    <label class="form-label" for="post-title">Title</label>
    <input type="text" name="post-title" class="form-input" />

    <!-- Label and textarea for entering the post content -->
    <label class="form-label" for="post-body">Content</label>
    <textarea name="post-body" class="form-input"></textarea>

    <!-- Button to submit the form and create the post -->
    <button type="submit" class="btn">Create</button>
  </form>
  <!-- End the post creation form -->
</div>
<!-- End the post creation card -->

<!-- Include a JavaScript file for handling post creation -->
<script src="/js/new.js"></script>
